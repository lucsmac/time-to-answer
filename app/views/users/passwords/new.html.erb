<div>
  <a class="hiddenanchor" id="signin"></a>

  <div class="login_wrapper" style="margin: 0 auto;">
    <div class="animate form login_form" style="height: 100vh; display: flex; align-items: center;">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <h2>Forgot your password?</h2>

          <div>
            <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: "form-control" %>
          </div>

          <div>
            <%= f.submit "Enviar", class: "btn btn-primary submit w-100 m-0", style: "margin-bottom: 15px !important;" %>
          </div>

          <div class="clearfix"></div>

          <div class="separator">

            <div class="clearfix"></div>
            <br />

            <div>
              <h1>Time to answer!</h1>
              <p>Â©2021 All Rights Reserved. Time to answer! Made by Lucas Macedo. Privacy and Terms</p>
            </div>
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>
