<% @questions.each do |question| %>
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="card-title"><%= question.description %></h5>
    </div>
    <div class="card-body">
      <ul class="list-group list-group-flush">
        <% question.answers.each do |answer| %>
          <li class="list-group-item">
            <%= answer.description %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<%= paginate @questions %>
