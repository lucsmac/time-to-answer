<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @subjects.model_name.human(count: 2) %></h1>
  </div>
</div>
 
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">    
    <thead>
      <tr>
        <th>#</th>
        <th><%= translate_attribute(@subjects, :description) %></th>
        <th>
          <%= link_to new_admins_backoffice_subject_path, class:"btn btn-success btn-circle btn-sm" do %>
            <i class="fas fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject| %>
        <tr role="row" class="odd">
          <td><%= subject.id %></td>
          <td><%= subject.description %></td>
          <td styles="width: 100px">
            <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-primary btn-circle btn-sm" do %>
              <i class="fas fa-edit"></i>
            <% end %>

            <%= link_to admins_backoffice_subject_path(subject), 
                method: :delete, 
                class:"btn btn-danger btn-circle btn-sm", 
                data: { confirm: t('messages.confirm_with', item: subject.description.downcase.truncate(30)) } do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @subjects %>
</div>