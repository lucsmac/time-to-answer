<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Listando Administradores</h1>
  </div>
</div>
 
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">    
    <thead>
      <tr>
        <th>#</th>
        <th>Email</th>
        <th>
          <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle btn-sm" do %>
            <i class="fas fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |admin| %>
        <tr role="row" class="odd">
          <td><%= admin.id %></td>
          <td><%= admin.email %></td>
          <td styles="width: 100px">
            <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle btn-sm" do %>
              <i class="fas fa-edit"></i>
            <% end %>

            <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle btn-sm", data: { confirm: "Deseja realmente excluir esse administrador?" } do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>