<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @questions.model_name.human(count: 2) %></h1>
  </div>
</div>
 
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">    
    <thead>
      <tr>
        <th>#</th>
        <th><%= translate_attribute(@questions, :description) %></th>
        <th><%= translate_attribute(@questions, :subject) %></th>
        <th>
          <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle btn-sm" do %>
            <i class="fas fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr role="row" class="odd">
          <td><%= question.id %></td>
          <td><%= question.description.truncate(50) %></td>
          <td><%= question.subject.description %></td>
          <td styles="width: 100px">
            <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle btn-sm" do %>
              <i class="fas fa-edit"></i>
            <% end %>

            <%= link_to admins_backoffice_question_path(question),
              method: :delete, 
              class:"btn btn-danger btn-circle btn-sm", 
              data: { confirm: t('messages.confirm_with', item: question.description.downcase.truncate(30)) } do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @questions %>
</div>